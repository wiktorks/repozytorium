<div class="d-flex justify-content-center h-100">
    <div class="card">
        <div class="card-header">
            <h3 style="text-align: center">Zaloguj się</h3>

        </div>
        <div class="card-body">
            <form id="logger" onsubmit="submitLogin()">
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input type="text" class="form-control" placeholder="login" name="login">

                </div>
                <div class="input-group form-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                    </div>
                    <input type="password" class="form-control" placeholder="hasło" name="passwd">
                </div>
                <div class="form-group">
                    <input type="submit" value="Login"  class="btn float-right login_btn"> <!--nie wiem czemu to nie działa z type="submit"-->
                </div>
            </form>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-center links">
                Nie masz konta?
            </div>
            <div class="d-flex justify-content-center">
                <a href="/register">Zarejestruj się!</a>
            </div>
        </div>
    </div>
</div>